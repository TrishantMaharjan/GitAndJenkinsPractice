pipeline {
  agent {
    docker {
      image 'openjdk:22-ea-7-slim'
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        git branch: 'main', url: 'https://github.com/TrishantMaharjan/GitAndJenkinsPractice.git'
      }
    }
    stage('Build') {
      steps {
        sh 'javac JavaPractice/Area.java'
      }
    }
    stage('Test') {
      steps {
        sh 'cd JavaPractice && java Area'
      }
    }
  }
}

